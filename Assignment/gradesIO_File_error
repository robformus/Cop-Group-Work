#include <stdio.h>
#include <stdlib.h>
#include <stralign.h>

#define CLS system("cls")
#define PAUSE system("pause")


int main(void) {

	int input = 0, testVar = 0;
	FILE* fd = NULL;


	//Checks if file is there, if not then creates it. 
	fd = fopen_s(&fd, "c:\\users\\public\\myfile.txt", "a+");

	if (NULL == fd) {
		printf("problem writing file!\n");
		//exit(-1);
		return 1;
	}
	
	//int close = fclose(file);


	//file open. C:\\Program Files\Studentio

	// Menu //loop
		do {
			printf("Grade Tracker");
			printf("Please choose an option:\n");
			printf("1. Enter Grades.\n");
			printf("2. Find Student Average.\n");
			printf("3. Find Exam Average.\n");
			printf("4. Find Class Average.\n");
			printf("5. Clear Grades.\n");
			printf("6. Save to Text File. \n");
			printf("7. Save and Quit.");
			scanf_s(" %d", &input);

			//Switch for Menu Input. Each case calls function appropriate to operation that is being requested.
			switch (input) {
			case 1:
				//Enter Grades.
				fprintf_s(fd, "This is a test\n");

				fclose(fd);

				break;

			case 2:
				//Average scores Student.
				break;

			case 3:
				//Exam average.
				break;

			case 4:
				//Class Average.
				break;

			case 5:
				//Clear Grades.
				break;

			case 6:
				//Save to TXT.
				break;

			case 7:
				//Quit.
				break;

			default:
				printf("Invalid Entry!\n");
				PAUSE;
				CLS;
				break;
			
			}

		} while (input != 7);

		PAUSE;
	

}


